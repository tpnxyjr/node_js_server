{{#if user}}

<link rel="stylesheet" type="text/css" href="./css/form.css">
<link rel="stylesheet" type="text/css" href="./css/jquery-ui-1.12.0.css">
<script type="text/javascript" src="./js/jquery.datetimepicker.full.min.js"></script>
<link rel="stylesheet" href="./css/jquery.datetimepicker.min.css" />

<div class="panel panel-default">
        <div class="panel-heading">
            <h1>Regular Order <a href="/customers/shoppingCart" style="float:right"><input type="button" value="View Cart"></a></h1>
        </div>
<div class="panel-body">
<form action="/customers/RegularOrder" method="post" onsubmit="return confirm('Do you really want to submit?');">
    <div style="display: inline;float:left;width:50%;">PO Number:<input type="text" name="PONUM" style='width:40%;margin:5px;' placeholder="Purchase Order Number" maxlength="50"><br>SM Number:<input type="text" name="SMNUM" style='width:40%;margin:5px;' placeholder="Side Mark Number" maxlength="50"><br>Delivery Method:<select name="delivery" style='width:40%;margin:5px;' placeholder="Delivery Method" maxlength="50"><option>WILL CALL</option><option>DELIVERY</option><option>UPS</option><option>LTL</option></select></div><div style="display: inline;vertical-align: top;">Special Instructions:<textarea name="instructions" cols="60" rows="4" placeholder="Special Instructions"></textarea></div>
    <br>Ideal Will Call/Ship: <input id = "datetimepicker" name="IDEAL" type="text" style="display:inline;width:30%;">
    <script type ="text/javascript">
        jQuery('#datetimepicker').datetimepicker({defaultDate:new Date(),defaultTime:'12:00'});
        document.getElementById('datetimepicker').value = $('#datetimepicker').datetimepicker('getValue');
    </script>

    <input type="number" id="rowlength" name="rowlength" readonly hidden>
    <table id="body" width="100%" align="center">
        <tr><th width="2%"><B>LN</B></th><td>ITEM NO</td><td width="4%">UOM</td><td width="6%">QTY</td><td width="5%">STATUS</td><td>DESCRIPTION</td><td>DESCRIPTION 2</td><td width="8%">UNIT PRICE</td><td width="8%">TOTAL PRICE</td></tr>


    </table>
    <INPUT type="button" value="Add Row" onclick="addRow('body')" />
    <INPUT type="button" value="Delete Row" onclick="deleteRow('body')" /><div id="loadmsg">Loading...Please Wait</div><noscript>This page requires Javascript to run.</noscript>
    <table id="footer" align="right">
        <tr><td>TOTAL</td><td><input id="total" type="number" readonly></td></tr>
        <tr><td><INPUT type="button" value="Calculate Total" onclick="subtotal('body');" /></td><td><input type="submit" value="Add To Cart" onclick="return checkOrder()"/></td></tr>
    </table>
</form>

</div>
</div>

<script src="./js/jquery-1.12.4.js"></script>
<script src="./js/jquery-ui.js"></script>
<script src="./js/regorder.js"></script>

{{else}}
    <div class="jumbotron">
        <h1>You are not logged in</h1>
        <p>Sign in and view your profile!</p>
        <p>
            <a href="/signin" class="btn btn-primary btn-lg" role="button">
                <span class="glyphicon glyphicon-user"></span>
                Sign in!
            </a>
        </p>
    </div>

{{/if}}